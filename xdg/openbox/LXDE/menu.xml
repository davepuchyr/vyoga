<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-menu" label="Applications" execute="/usr/share/openbox/xdg-menu lxde-applications"/>

<menu id="root-menu" label="LXDE">
  <separator label="LXDE" />
  <menu id="apps-menu" />
  <item label="PCManFM">
    <action name="Execute">
      <startupnotify><enabled>yes</enabled><icon>pcmanfm</icon></startupnotify>
      <command>pcmanfm</command>
    </action>
  </item>
  <item label="LXTerminal">
    <action name="Execute">
      <startupnotify><enabled>yes</enabled><icon>lxterminal</icon></startupnotify>
      <command>lxterminal</command>
    </action>
  </item>
  <item label="Firefox">
    <action name="Execute">
      <startupnotify><enabled>yes</enabled><icon>pcmanfm</icon></startupnotify>
      <command>firefox</command>
    </action>
  </item>
  <item label="Run Command">
    <action name="Execute">
      <startupnotify><enabled>yes</enabled><icon>system-run</icon></startupnotify>
      <command>lxpanelctl run</command>
    </action>
  </item>
  <separator />
  <menu id="client-list-menu" />
  <separator />
  <item label="Desktop Settings">
    <action name="Execute">
      <startupnotify><enabled>yes</enabled></startupnotify>
      <command>pcmanfm --desktop-pref</command>
    </action>
  </item>
  <item label="Reload Config Files">
    <action name="Reconfigure" />
  </item>
  <separator />
  <item label="Exit">
    <action name="Execute"><command>lxde-logout</command></action>
  </item>
</menu>

</openbox_menu>
